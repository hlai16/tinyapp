<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <% if (user) { %>
        <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
          <div class="form-group mx-sm-3 mb-2">
            <h6 class="text-white">Logged In As: <%= user.email %></h6>
          </div>
          <button type="submit" class="btn btn-primary mb-2">Logout</button>
        </form>
      <% } else { %>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
        <div class="form-group mx-sm-3 mb-2">
          <label for="user" class="sr-only">user email</label>
          <input type="text" class="form-control" id="user" placeholder="user email" name="email">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Login</button>
      </form>
    <% } %>
    </nav>
  </header>